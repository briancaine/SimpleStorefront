<div class="col-md-4">
  <form action="{{ path('buy_ingredient', {'ingredient_id': ingredient.id}) }}" method="post">

	<div class="pricing1">
	
		<div class="top">
		
			<h2 class="editContent">{{ ingredient.name }}</h2>
			
			<p class="price "><b class="editContent">1 {{ ingredient.measure }} for ${{ ingredient.price }}</b></p>
		
		</div><!-- /.top -->
		
		<div class="bottom">

			{% if ingredient_service.canUserAfford(app.user, ingredient) %}
      <button type="submit" class="btn btn-lg btn-embossed btn-block btn-primary"><span class="fa"></span>Buy One</button>
      {% endif %}
		
		</div><!-- /.bottom -->
	
	</div><!-- /.pricing1 -->

</form>
</div><!-- /.col-md-4 col -->
